<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_115sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#D9FFFCF3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.625"
                app:layout_constraintStart_toStartOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_115sdp"
                    android:background="#D9FFFCF3"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#D9FFFCF3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/_95sdp"
                            android:layout_height="match_parent"
                            android:background="#D9FFFCF3">

                            <ImageView
                                android:id="@+id/wishlistLibrarybook_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#D9FFFCF3"
                                android:padding="@dimen/_15sdp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/vedas"
                                tools:ignore="ContentDescription" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingRight="@dimen/_10sdp"
                            android:background="#D9FFFCF3"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="start">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="start">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="start">

                                <TextView
                                    android:id="@+id/wishlistLibrarybook_name"
                                    android:layout_width="@dimen/_110sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:text="रामायण"
                                    android:textColor="#303030"
                                    android:textSize="@dimen/_9ssp"
                                    android:textStyle="bold"></TextView>
                                    <TextView
                                        android:id="@+id/wishlistLibrarybook_authorename"
                                        android:layout_width="@dimen/_130sdp"
                                        android:layout_height="wrap_content"
                                        android:text="रचयिता महर्षि वाल्मीकि जी"
                                        android:textColor="#303030"
                                        android:textSize="@dimen/_9ssp"
                                        android:textStyle="bold"></TextView>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="end">

                                        <ImageButton
                                            android:id="@+id/mywishlist_settingicon"
                                            android:layout_width="23dp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_margin="@dimen/_5sdp"
                                            android:background="@drawable/menuicon1"
                                            android:paddingTop="@dimen/_5sdp" />
                                    </LinearLayout>
                            </LinearLayout>

                                <TextView
                                    android:id="@+id/eBook_Version"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:layout_marginEnd="@dimen/_6sdp"
                                    android:text="Hindi Version"
                                    android:textColor="#94292929"
                                    android:textSize="@dimen/_7sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_6sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <RatingBar
                                        android:id="@+id/eBook_rating"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:numStars="5"
                                        android:rating="4"
                                        android:stepSize="1"
                                        app:useMaterialThemeColors="false"
                                        android:theme="@style/RatingBar"
                                        app:layout_constraintBottom_toTopOf="@+id/reviewEditText"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />
                                    <TextView
                                        android:id="@+id/eBook_ratingdata"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="start"
                                        android:text="4.5"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:textColor="#FF9800"
                                        android:textSize="@dimen/_8sdp"
                                        android:textStyle="bold"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"

                                    android:layout_marginEnd="@dimen/_6sdp">

                                    <TextView
                                        android:id="@+id/wishlistLibrarybook_description"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="start"
                                        android:maxLength="72"
                                        android:text="इस महाकाव्य के ऐतिहासिक विकास और संरचनागत परतों को जानने के लिए कई प्रयास किए गए हैं।"
                                        android:textColor="#E1292929"
                                        android:textSize="@dimen/_9sdp"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent" />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="@dimen/_2sdp"
                                    android:gravity="end">

                                <TextView
                                    android:id="@+id/wishlistLibrarybook_readeNow"
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="26dp"
                                    android:background="@drawable/readbutton"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:text="Read Now"
                                    android:textColor="@color/white"
                                    android:textSize= "@dimen/_10sdp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:ignore="HardcodedText,UsingOnClickInXml"></TextView>

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>