<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF9ED"
    android:orientation="vertical"
    tools:context=".LibraryBook_DetailsFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pdfdemo"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ananta1"

                    />

                <LinearLayout
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Ananta"
                        android:textColor="#EB1B1A1A"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText"></TextView>

                    <TextView
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="सनातन धर्म का प्रसार"
                        android:textColor="#303030"
                        android:textSize="@dimen/_13ssp"
                        tools:ignore="HardcodedText,RtlHardcoded"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/Likedicon"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_11sdp"
                        android:src="@drawable/fav">

                    </ImageView>

                    <ImageView
                        android:id="@+id/notification"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/notification2">

                    </ImageView>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_125sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="@dimen/_95sdp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/Librarybookdetail_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/vedas"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/Librarybookdetail_name"
                                        android:layout_width="@dimen/_110sdp"
                                        android:layout_height="wrap_content"
                                        android:text="रामायण"
                                        android:textColor="#303030"
                                        android:textSize="@dimen/_9ssp"
                                        android:textStyle="bold"></TextView>

                                    <TextView
                                        android:id="@+id/Librarybookdetail_authorename"
                                        android:layout_width="@dimen/_130sdp"
                                        android:layout_height="wrap_content"
                                        android:text="रचयिता महर्षि वाल्मीकि जी"
                                        android:textColor="#303030"
                                        android:textSize="@dimen/_9ssp"
                                        android:textStyle="bold"></TextView>
                                </LinearLayout>


                            </LinearLayout>

                            <TextView
                                android:id="@+id/eBook_Version"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:gravity="start"
                                android:text="Hindi Version"
                                android:textColor="#94292929"
                                android:textSize="@dimen/_7sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_6sdp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <RatingBar
                                    android:id="@+id/eBook_rating"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:numStars="5"
                                    android:rating="4"
                                    android:stepSize="1"
                                    android:theme="@style/RatingBar"
                                    app:layout_constraintBottom_toTopOf="@+id/reviewEditText"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:useMaterialThemeColors="false" />

                                <TextView
                                    android:id="@+id/eBook_ratingdata"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:gravity="start"
                                    android:text="4.5"
                                    android:textColor="#FF9800"
                                    android:textSize="@dimen/_8sdp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/Librarybookdetail_description"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:maxLength="72"
                                    android:text="इस महाकाव्य के ऐतिहासिक विकास और संरचनागत परतों को जानने के लिए कई प्रयास किए गए हैं।"
                                    android:textColor="#E1292929"
                                    android:textSize="@dimen/_9sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_6sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:maxLength="72"
                                    android:text="Total Pages : "
                                    android:textColor="#E1292929"
                                    android:textSize="@dimen/_9sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <TextView
                                    android:id="@+id/Librarybookdetail_pagecount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="start"
                                    android:maxLength="72"
                                    android:text="50"
                                    android:textColor="#E1292929"
                                    android:textSize="@dimen/_9sdp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:padding="@dimen/_2sdp">

                                <TextView
                                    android:id="@+id/Librarybook_readeNow"
                                    android:layout_width="match_parent"
                                    android:layout_height="33dp"
                                    android:layout_marginTop="@dimen/_1sdp"
                                    android:background="@drawable/readbutton"
                                    android:gravity="center"
                                    android:text="Read Now"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    tools:ignore="HardcodedText,UsingOnClickInXml"></TextView>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"

        android:layout_marginEnd="@dimen/_15sdp"
        android:orientation="vertical">


        <TextView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#99303030"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/Librarybookdetail_descriptionbottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="start"
            android:text="इस महाकाव्य के ऐतिहासिक विकास और संरचनागत परतों को जानने के लिए कई प्रयास किए गए हैं। इस महाकाव्य के ऐतिहासिक विकास और संरचनागत परतों को जानने के लिए कई प्रयास किए गए हैं। आधुनिक विद्वान इसका रचनाकाल ७ वीं से ४ वीं शताब्दी ईसा पूर्व मानते हैं। कुछ विद्वान तो इसे तीसरी शताब्दी ई तक की रचना मानते हैं।[4] कुछ भारतीय कहते हैं कि यह ६०० ईपू से पहले लिखा गया।"
            android:textColor="#E1292929"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingbar"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:elevation="@dimen/_11sdp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/_200sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout17"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/anataprogress"
        tools:ignore="MissingConstraints,UnusedAttribute"></com.airbnb.lottie.LottieAnimationView>



</LinearLayout>