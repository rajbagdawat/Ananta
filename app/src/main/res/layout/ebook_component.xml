<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints,RtlSymmetry">


        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_208sdp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#D9FFFCF3"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:cardUseCompatPadding="true"
            tools:ignore="RtlHardcoded">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#D9FFFCF3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/eBook_Images"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_125sdp"
                    android:src="@drawable/vedas"
                    android:padding="@dimen/_7sdp"
                    tools:ignore="ContentDescription" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#43616060"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        >


                    <TextView
                        android:id="@+id/eBook_Name"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Vedas"
                        android:textColor="#F0292929"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold" />

                        <TextView
                            android:id="@+id/eBook_Name_Type"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Types - 4 Vedas"
                            android:textColor="#F0292929"
                            android:textSize="@dimen/_8sdp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        >


                    <CheckBox
                        android:id="@+id/eBook_likeicon"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"
                        android:gravity="center"
                        app:useMaterialThemeColors="false"
                        android:button="@drawable/selector_wishlist">

                    </CheckBox>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/eBook_Version"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:text="Hindi Version"
                    android:textColor="#94292929"
                    android:textSize="@dimen/_7sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <RatingBar
                        android:id="@+id/eBook_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:rating="4"
                        android:stepSize="1"
                        app:useMaterialThemeColors="false"
                        android:theme="@style/RatingBar"
                        app:layout_constraintBottom_toTopOf="@+id/reviewEditText"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/eBook_ratingdata"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="4.5"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="#FF9800"
                        android:textSize="@dimen/_8sdp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp">

                    <TextView
                        android:id="@+id/eBook_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLength="72"
                        android:text="The Vedas are ancient sacred texts in Hinduism."
                        android:textColor="#79292929"
                        android:textSize="@dimen/_7sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
